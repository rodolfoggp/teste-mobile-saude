<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolBarTheme">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>

    <style name="Base_ToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_marginTop">@dimen/single_space</item>
        <item name="android:layout_marginStart">@dimen/double_space</item>
        <item name="android:layout_marginEnd">@dimen/double_space</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/min_card_title_size</item>
        <item name="autoSizeMaxTextSize">@dimen/max_card_title_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CardDate">
        <item name="android:layout_marginStart">@dimen/double_space</item>
        <item name="android:layout_marginBottom">@dimen/single_space</item>
    </style>

    <style name="DetailsTitle">
        <item name="android:textSize">@dimen/details_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/triple_space</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DetailsCategory">
        <item name="android:layout_marginStart">@dimen/triple_space</item>
        <item name="android:layout_marginBottom">@dimen/single_space</item>
    </style>

    <style name="DetailsDate">
        <item name="android:layout_marginLeft">@dimen/triple_space</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="DetailsContent">
        <item name="android:layout_marginTop">@dimen/double_space</item>
        <item name="android:layout_marginLeft">@dimen/single_space</item>
        <item name="android:layout_marginRight">@dimen/single_space</item>
    </style>

</resources>
