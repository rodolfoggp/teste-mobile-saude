<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_spacing"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/card_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">


            <TextView
                android:id="@+id/title_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:layout_marginTop="@dimen/single_space"
                android:layout_marginStart="@dimen/double_space"
                android:layout_marginEnd="@dimen/double_space"
                android:textColor="@android:color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/min_title_size"
                android:autoSizeMaxTextSize="@dimen/max_title_size"
                android:ellipsize="end"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_textview"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="@dimen/double_space"
                android:layout_marginBottom="@dimen/single_space" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>